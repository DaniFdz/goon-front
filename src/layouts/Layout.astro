---
import Header from "@/components/Header"
import "@fontsource-variable/onest";
import { ViewTransitions } from "astro:transitions";

interface Props {
	title: string;
	bg: boolean;
}

const { title, bg } = Astro.props;
---

<!doctype html>
<html
	lang="es"
>
	<!-- <html class="dark" lang="es"> -->
	<head>
		<meta charset="UTF-8" />
		<meta name="author" content="Daniel Fernández" />
		<meta name="title" content={title} />
		<meta name="description" content="¡Descubre Goon, la marca de moda de Laurana Corrales en Madrid! Explora nuestro portfolio para encontrar una colección versátil y única de prendas con estilo. Desde diseños artesanales hasta las últimas tendencias, nuestro portfolio refleja la pasión por la moda y la creatividad de Laurana. Sumérgete en la diversidad de estilos y encuentra la autenticidad en cada detalle. ¡Explora el portfolio de Goon hoy para descubrir moda que se adapta a tu vida!" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions/>
	</head>
	<body class="relative text-black overflow-x-hidden">
		<main>
			<Header bg={bg} client:idle/>
			<slot />
		</main>
	</body>
</html>
<style is:global>
	:root {
		color-scheme: light;
	}
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}
	html {
		font-family: "Onest Variable", system-ui, sans-serif;
		scroll-behavior: smooth;
	}
	body {
		color: rgba(17, 17, 17, 0.9);
		display: flex;
		flex-direction: column;
		min-height: 100vh;
		overscroll-behavior: none;
	}
	@media (prefers-reduced-motion: reduce) {
		html {
			scroll-behavior: auto;
		}
	}
	@font-face {
			font-family: 'art-nuvo';
			font-style: normal;
			src: local('art-nuvo'),
				url("/fonts/art-nuvo.otf");
			font-display: swap;
		}
</style>
